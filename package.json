{
  "name": "chesster",
  "version": "1.0.0",
  "description": "Interactive Node.js TypeScript chess game with Stockfish engine",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "web:dev": "vite",
    "web:build": "vite build",
    "web:preview": "vite preview"
  },
  "dependencies": {
    "chess.js": "^1.0.0-beta.6",
    "stockfish": "^15.0.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-chessboard": "^4.4.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@vitejs/plugin-react": "^4.1.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "vite": "^4.5.0"
  },
  "keywords": ["chess", "stockfish", "game", "cli", "web", "react"],
  "author": "Ahmad",
  "license": "MIT"
} 